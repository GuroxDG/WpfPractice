<Window x:Class="Wpfpractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpfpractice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Window.Resources>
        <SolidColorBrush x:Key="brush" Color="Red" />
    </Window.Resources>
    <Grid Name="pnlMainGrid" MouseUp="PnlMainGrid_OnMouseUp" Background="LightBlue" Opacity="1">
        <WrapPanel>
            <TextBlock Foreground="Blue">Multi</TextBlock>
            <TextBlock Foreground="{DynamicResource brush}">Hola Multi</TextBlock>
        </WrapPanel>
        <Button Name="btnPlay" HorizontalAlignment="Left" Content="First Option" Height="25" FontWeight="Bold" Click="BtnPlay_OnClick"></Button>
        <TextBox Text="hola" Width="30" Height="50"></TextBox>
    </Grid>
</Window>
