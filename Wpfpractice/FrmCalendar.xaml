<Window x:Class="Wpfpractice.FrmCalendar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Wpfpractice"
        mc:Ignorable="d"
        Title="FrmCalendar" Height="450" Width="800">
    <Grid>
        <Calendar x:Name="Calendar1"
                  HorizontalAlignment="Left" Margin="10,10,0,0"
                  VerticalAlignment="Top" 
                  MouseDoubleClick="Calendar1_OnMouseDoubleClick" />
        <Label
            x:Name="Label1"
            Content="Data" HorizontalAlignment="Center"></Label>
        <ListBox x:Name="ListBox1" 
                 HorizontalAlignment="Right" Margin="0,10,10,10"
                 Width="200" Height="50">
        </ListBox>
        
        
    </Grid>
</Window>
